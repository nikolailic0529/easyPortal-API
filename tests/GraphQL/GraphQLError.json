{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "http://spec.graphql.org/June2018/#sec-Response-Format",
    "type": "object",
    "required": [
        "errors"
    ],
    "properties": {
        "errors": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": false,
                "required": [
                    "message"
                ],
                "properties": {
                    "message": {
                        "type": "string"
                    },
                    "locations": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "additionalProperties": false,
                            "required": [
                                "line",
                                "column"
                            ],
                            "properties": {
                                "line": {
                                    "type": "integer"
                                },
                                "column": {
                                    "type": "integer"
                                }
                            }
                        }
                    },
                    "path": {
                        "type": "array",
                        "items": {
                            "type": [
                                "integer",
                                "string"
                            ]
                        }
                    },
                    "extensions": {
                        "type": "object"
                    },
                    "trace": {
                        "description": "from https://github.com/nuwave/lighthouse",
                        "type": "array"
                    },
                    "debugMessage": {
                        "description": "from https://github.com/nuwave/lighthouse",
                        "type": "array"
                    }
                }
            }
        }
    }
}
