{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "http://spec.graphql.org/June2018/#sec-Response-Format",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "data"
    ],
    "properties": {
        "data": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "${graphql.root}"
            ],
            "properties": {
                "${graphql.root}": {
                    "$ref": "${schema.path}"
                }
            }
        }
    }
}
