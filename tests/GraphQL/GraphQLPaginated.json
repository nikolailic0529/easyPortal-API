{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "http://spec.graphql.org/June2018/#sec-Response-Format",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "data"
    ],
    "properties": {
        "data": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "${graphql.root}"
            ],
            "properties": {
                "${graphql.root}": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": [
                        "data",
                        "paginatorInfo"
                    ],
                    "properties": {
                        "data": {
                            "type": "array",
                            "items": {
                                "$ref": "${schema.path}"
                            }
                        },
                        "paginatorInfo": {
                            "type": "object",
                            "additionalProperties": false,
                            "required": [
                                "count",
                                "currentPage",
                                "firstItem",
                                "hasMorePages",
                                "lastItem",
                                "lastPage",
                                "perPage",
                                "total"
                            ],
                            "properties": {
                                "count": {
                                    "type": "integer"
                                },
                                "currentPage": {
                                    "type": "integer"
                                },
                                "firstItem": {
                                    "type": [
                                        "integer",
                                        "null"
                                    ]
                                },
                                "hasMorePages": {
                                    "type": "boolean"
                                },
                                "lastItem": {
                                    "type": [
                                        "integer",
                                        "null"
                                    ]
                                },
                                "lastPage": {
                                    "type": "integer"
                                },
                                "perPage": {
                                    "type": "integer"
                                },
                                "total": {
                                    "type": "integer"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
