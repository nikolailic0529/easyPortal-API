{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "enabled",
        "message",
        "start",
        "end"
    ],
    "properties": {
        "enabled": {
            "type": "boolean"
        },
        "message": {
            "type": [
                "string",
                "null"
            ]
        },
        "start": {
            "oneOf": [
                {
                    "type": "string",
                    "format": "date-time"
                },
                {
                    "type": "null"
                }
            ]
        },
        "end": {
            "oneOf": [
                {
                    "type": "string",
                    "format": "date-time"
                },
                {
                    "type": "null"
                }
            ]
        }
    }
}
