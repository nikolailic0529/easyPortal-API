{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "additionProperties": false,
    "type": "object",
    "required": [
        "given_name",
        "family_name"
    ],
    "properties": {
        "id": {
            "$ref": "../types.json#/definitions/ID"
        },
        "given_name": {
            "type": [
                "string",
                "null"
            ]
        },
        "family_name": {
            "type": [
                "string",
                "null"
            ]
        },
        "email": {
            "type": "string"
        },
        "email_verified": {
            "type": "boolean"
        },
        "enabled" : {
            "type": "boolean"
        },
        "roles" : {
            "type": "array",
            "items": {
                "$ref": "../Types/Role.json"
            }
        },
        "invitations": {
            "type": "array",
            "items": {
                "$ref": "../Types/Invitation.json"
            }
        },
        "teams": {
            "type": "array",
            "items": {
                "$ref": "./Team.json"
            }
        },
        "team": {
            "oneOf": [
                {
                    "$ref": "../Types/Team.json"
                },
                {
                    "type": "null"
                }
            ]
        }
    }
}
