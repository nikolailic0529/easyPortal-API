{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "name",
        "enabled",
        "cron",
        "queue",
        "settings",
        "description"
    ],
    "properties": {
        "name": {
            "type": "string"
        },
        "enabled": {
            "type": "boolean"
        },
        "cron": {
            "type": "string"
        },
        "queue": {
            "type": "string"
        },
        "settings": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "description": {
            "type": [
                "string",
                "null"
            ]
        }
    }
}
