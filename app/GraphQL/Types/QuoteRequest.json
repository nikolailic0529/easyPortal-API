{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "additionProperties": false,
    "type": "object",
    "required": [
        "oem_id",
        "oem",
        "customer_id",
        "customer",
        "contact_id",
        "contact",
        "type_id",
        "type",
        "message",
        "files",
        "assets"
    ],
    "properties": {
        "id": {
            "$ref": "../types.json#/definitions/ID"
        },
        "oem_id": {
            "$ref": "../types.json#/definitions/ID"
        },
        "oem": {
            "$ref": "../types.json#/definitions/Oem"
        },
        "user_id": {
            "$ref": "../types.json#/definitions/ID"
        },
        "customer_id": {
            "$ref": "../types.json#/definitions/ID"
        },
        "customer": {
            "$ref": "../types.json#/definitions/Customer"
        },
        "contact_id": {
            "$ref": "../types.json#/definitions/ID"
        },
        "contact": {
            "$ref": "../types.json#/definitions/Contact"
        },
        "type_id": {
            "$ref": "../types.json#/definitions/ID"
        },
        "type": {
            "$ref": "../types.json#/definitions/Type"
        },
        "message": {
            "type": [
                "string",
                "null"
            ]
        },
        "created_at": {
            "type": "string",
            "format": "date-time"
        },
        "updated_at": {
            "type": "string",
            "format": "date-time"
        },
        "user": {
            "$ref": "../Types/User.json"
        },
        "files": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalItems": false,
                "required": [
                    "name"
                ],
                "properties": {
                    "name": {
                        "type": "string"
                    }
                }
            }
        },
        "assets": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalItems": false,
                "required": [
                    "id"
                ],
                "properties": {
                    "id": {
                        "$ref": "../types.json#/definitions/ID"
                    }
                }
            }
        }
    }
}
