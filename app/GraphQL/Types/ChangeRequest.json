{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "additionProperties": false,
    "type": "object",
    "required": [
        "subject",
        "message",
        "cc",
        "bcc",
        "user_id",
        "user",
        "asset_id"
    ],
    "properties": {
        "id": {
            "$ref": "../types.json#/definitions/ID"
        },
        "subject": {
            "type": "string"
        },
        "message": {
            "type": "string"
        },
        "cc": {
            "oneOf": [
                {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                {
                    "type": "null"
                }
            ]
        },
        "bcc": {
            "oneOf": [
                {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                {
                    "type": "null"
                }
            ]
        },
        "user_id": {
            "$ref": "../types.json#/definitions/ID"
        },
        "user": {
            "additionProperties": false,
            "type": "object",
            "required": [
                "given_name",
                "family_name",
                "id"
            ],
            "properties": {
                "id": {
                    "$ref": "../types.json#/definitions/ID"
                },
                "given_name": {
                    "type": "string"
                },
                "family_name": {
                    "type": "string"
                }
            }
        },
        "created_at": {
            "type": "string",
            "format": "date-time"
        },
        "updated_at": {
            "type": "string",
            "format": "date-time"
        },
        "asset_id": {
            "oneOf": [
                {
                    "$ref": "../types.json#/definitions/ID"
                },
                {
                    "type": "null"
                }
            ]
        },
        "asset": {
            "oneOf": [
                {
                    "$ref": "../types.json#/definitions/Asset"
                },
                {
                    "type": "null"
                }
            ]
        }
    }
}
