{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "ID": {
            "type": "string",
            "format": "uuid"
        },
        "url": {
            "type": "string",
            "format": "uri",
            "pattern": "^(https?)://"
        },
        "CustomerStatus": {
            "type": "object",
            "required": [
                "id",
                "name"
            ],
            "properties": {
                "id": {
                    "$ref": "#/definitions/ID"
                },
                "name": {
                    "type": "string"
                }
            }
        },
        "CustomerType": {
            "$ref": "#/definitions/CustomerStatus"
        }
    }
}
