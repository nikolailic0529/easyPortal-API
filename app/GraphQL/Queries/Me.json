{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "id",
        "given_name",
        "family_name",
        "email",
        "locale",
        "root",
        "permissions",
        "homepage",
        "timezone",
        "language_id"
    ],
    "properties": {
        "id": {
            "$ref": "../types.json#/definitions/ID"
        },
        "given_name": {
            "type": "string"
        },
        "family_name": {
            "type": "string"
        },
        "email": {
            "type": "string"
        },
        "locale": {
            "type": [
                "string",
                "null"
            ]
        },
        "root": {
            "type": "boolean"
        },
        "permissions": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "timezone": {
            "type": [
                "string",
                "null"
            ]
        },
         "homepage": {
            "type": [
                "string",
                "null"
            ]
        },
        "language_id": {
            "oneOf": [
                {
                    "type": "null"
                },
                {
                    "$ref": "../types.json/#/definitions/ID"
                }
            ]
        },
        "language": {
            "oneOf": [
                {
                    "type": "null"
                },
                {
                    "$ref": "../Types/Language.json"
                }
            ]
        }
    }
}
